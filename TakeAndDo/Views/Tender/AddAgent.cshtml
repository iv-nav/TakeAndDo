@model TakeAndDo.Models.Order

@{
    ViewBag.Title = "AddAgent";
}

<h2>AddAgent</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Order</h4>
    @Html.HiddenFor(model => model.TenderId)
